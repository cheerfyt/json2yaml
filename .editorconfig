root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_line = true
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space


[*.{json,html}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false
indent_style = space

[*.go]
indent_style = tab

[Makefile]
indent_style = tab
